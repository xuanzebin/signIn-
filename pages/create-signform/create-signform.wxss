form{
  border:1px solid black;
  border-radius:10rpx;
  padding:20rpx;
  margin-top:150rpx;
}
.section textarea,
.section input{
  border:1px solid black;
  border-radius:6rpx;
  margin-left:20rpx;
  width:65%;
}
.section{
  display:flex;
  justify-content: flex-end;
  margin-bottom:30rpx;
}
.section button{
  width:40%;
}
.submitButton{
  background:rgb(0, 153, 255);
  color:white;
}
.resetButton{
  background: red;
  color:white;
}