<view class="container">
  <form  bindsubmit="signformSubmit">
    <view class="section">
      <text>签到表名称:</text>
      <input name="name"></input>
    </view>
    <view class="section">
      <text>时间:</text>
      <input name="time"></input>
    </view>
    <view class="section">
      <text>创建人:</text>
      <input name="creater"></input>
    </view>
    <view class="section">
      <text>备注:</text>
      <textarea name="remarks"></textarea>
    </view>
    <view class="section">
      <button form-type="submit">提交</button>
      <button form-type="reset">清空</button>
    </view>
  </form>
</view>