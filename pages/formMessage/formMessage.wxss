/* pages/formMessage/formMessage.wxss */
.signInList,
.leaveList{
  display: flex;
  flex-wrap: wrap;
}
.signInListWrapper,
.leaveListWrapper{
  border:1px solid black;
  border-radius: 10rpx;
  margin:40rpx 0;
  display: flex;
  flex-direction: column;
}
.userPic{
  width:150rpx; height:150rpx;
  border-radius: 50%;
}
.messageWrapper{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
text{
  font-weight: bold;
  text-align: center;
}